[init]
	defaultBranch = main
	templatedir = ~/.git_template

[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true  # use n and N to move between diff sections

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default

[fetch]
  prune = true
[rebase]
	autosquash = true
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
